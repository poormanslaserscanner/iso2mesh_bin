CFLAGS = -Wall -I../include
LIBS = -L../lib -ljmesh

test: test.o
	g++ -o meshfix test.o $(LIBS)


#-------------------------------------------------------------------------
# Dependancies
#-------------------------------------------------------------------------

test.o:			test.cpp
	$(CC) $(CFLAGS) -c $<

#-------------------------------------------------------------------------

clean :
	$(RM) -f *.o meshfix
